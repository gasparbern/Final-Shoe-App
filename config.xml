<?xml version='1.0' encoding='utf-8'?>
<widget id="app.bsit.sectione" version="5.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SHOE BANK</name>
    <description>This App shows different types of shoes for men and women. Enjoy :)</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Petmalu Lodi Werpa Igop
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <icon src="www/1.png" platform="android" width="57" height="57" density="mdpi" />
</widget>
